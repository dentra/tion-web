root = true

# general
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space

# python
[*.py]
indent_size = 4

# C++
[*.{cpp,h,tcc}]
indent_size = 2

# Web
[*.{js,html,css}]
indent_size = 2

# YAML
[*.{yaml,yml}]
indent_size = 2
quote_type = double

# JSON
[*.json]
indent_size = 2

[*.dart]
indent_size = 2
quote_type = double
